LEVEL := ../

include $(LEVEL)/Makefile.cmake.bitcode.config

LLVMCC.Flags += -fno-builtin -m64
ifeq ($(shell uname -s), Darwin)
  LLVMCC.Flags += -isysroot $(shell xcrun --show-sdk-path)
endif	

# FIXME: This is a horrible hack
ifeq ($(USE_MODULE_INSTEAD_OF_BCA),1)
	MODULE_NAME=kleeRuntimeIntrinsic-64
else
	ARCHIVE_NAME=kleeRuntimeIntrinsic-64
endif

include $(LEVEL)/Makefile.cmake.bitcode.rules
